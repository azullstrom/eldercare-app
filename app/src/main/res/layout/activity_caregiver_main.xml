<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/your_patients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="170dp"
        android:text="@string/your_patients"
        android:textAppearance="@style/your_patients"
        android:lineSpacingExtra="4sp"
        android:translationY="-1.91sp"
        android:gravity="top" />

    <!--<TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center" />-->

    <ImageView
        android:id="@+id/noPatientsImageView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:contentDescription="@string/no_patients_text"
        android:layout_marginTop="150dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/no_patients_image"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noPatientsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noPatientsImageView"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-25dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="16dp"
        android:text="You don't have any patients"
        android:textAppearance="@style/you_dont_have_patients" />

    <TextView
        android:id="@+id/clickToAddTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noPatientsTextView"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="-22dp"
        android:gravity="center"
        android:maxLines="1"
        android:padding="16dp"
        android:text="Click the plus button to add"
        android:textAppearance="@style/click_to_add" />

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="505dp"
        android:gravity="bottom"
        android:padding="16dp"
        android:src="@drawable/arrow_image"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_marginTop="580dp"
        android:layout_marginHorizontal="290dp"
        android:src="@drawable/add_button_image"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/add_patient"
        android:visibility="visible" />


</RelativeLayout>
